{
  "name": "imageProcessingServerless",
  "version": "1.0.0",
  "description": "Image Processing Serverless",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/josephdempsey/imageProcessingServerless.git"
  },
  "keywords": [
    "localstack",
    "aws",
    "lambda",
    "testing",
    "serverless"
  ],
  "author": "Joseph Dempsey",
  "license": "None",
  "bugs": {
    "url": "https://github.com/josephdempsey/imageProcessingServerless/issues"
  },
  "homepage": "https://github.com/josephdempsey/imageProcessingServerless#readme",
  "devDependencies": {
    "@types/aws-lambda": "^8.10.72",
    "@types/jest": "^26.0.20",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@typescript-eslint/parser": "^4.15.1",
    "eslint": "^7.20.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.5",
    "jest": "^26.6.3",
    "lambda-tester": "^4.0.1",
    "serverless-localstack": "^0.4.28",
    "serverless-offline": "^5.12.1",
    "serverless-plugin-typescript": "^1.1.9",
    "ts-jest": "^26.5.1",
    "ts-node": "^9.1.1",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "aws-sdk": "^2.847.0",
    "serverless-http": "^2.7.0"
  },
  "jest": {
    "roots": [
      "<rootDir>/test",
      "<rootDir>/lib"
    ],
    "testEnvironment": "node",
    "projects": [
      {
        "displayName": "Unit",
        "testMatch": [
          "<rootDir>/test/unit/**/*.spec.(js|ts)"
        ],
        "transform": {
          "^.+\\.tsx?$": "ts-jest"
        },
        "setupFilesAfterEnv": [
          "jest-extended"
        ]
      },
      {
        "displayName": "Integration",
        "testMatch": [
          "<rootDir>/test/integration/**/*.spec.ts"
        ],
        "transform": {
          "^.+\\.tsx?$": "ts-jest"
        },
        "moduleFileExtensions": [
          "js",
          "json",
          "jsx",
          "ts",
          "tsx",
          "node",
          "feature"
        ]
      }
    ]
  }
}
