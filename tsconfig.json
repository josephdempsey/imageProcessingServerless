{
  "compilerOptions": {
    "lib": ["dom", "es2018"],
    "target": "ES2018",
    "module": "commonjs",
    "outDir": "./target",
    "strict": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "types": [
      "node",
      "jest",
    ],
    "sourceMap": true
  },
  "include": [
    "./"
  ],
  "exclude": [
    "./node_modules",
    "./target"
  ]
}
